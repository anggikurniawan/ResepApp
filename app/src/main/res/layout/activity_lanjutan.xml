<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    tools:context=".Lanjutan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="48dp"
        android:textAlignment="center"/>
    <ImageView
        android:id="@+id/gambar"
        app:layout_constraintTop_toBottomOf="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/jdlbahan"
        app:layout_constraintTop_toBottomOf="@+id/gambar"
        android:text="Bahan :"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bahan"
        app:layout_constraintTop_toBottomOf="@+id/jdlbahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingBottom="5dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/jdlcara"
        app:layout_constraintTop_toBottomOf="@+id/bahan"
        android:layout_width="match_parent"
        android:text="Cara Memasak :"
        android:textSize="30dp"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cara"
        app:layout_constraintTop_toBottomOf="@id/jdlcara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>